<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feiyongjing.living_bill.dao.UserMapper">
    <select id="getUserPasswordByUsername" parameterType="Map" resultType="java.lang.String">
        SELECT PASSWORD
        FROM USER
        WHERE NAME = #{name};
    </select>
    <select id="getUserByUsername" parameterType="Map" resultType="com.feiyongjing.living_bill.enity.User">
        SELECT *
        FROM USER
        WHERE NAME = #{username};
    </select>
    <insert id="createUser" parameterType="Map">
        INSERT INTO USER(NAME, PASSWORD, AVATAR_URL,CREATED_AT,UPDATED_AT)
        VALUES (#{name}, #{password}, #{avatarUrl},NOW(),NOW());
    </insert>
</mapper>